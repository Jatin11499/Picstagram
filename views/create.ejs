<%- include("partials/header") -%>
<%- include("partials/nav") -%>

<div class="container" style="margin-top:75px;">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form method="post" enctype="multipart/form-data" action="/upload" class="upload">
                <div class="form-group">
                    <input type="file" name="image" id="file" required>
                  </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="postBody" placeholder="Write a caption..." rows="10"></textarea>
                </div>
                <input type="hidden" name="uname" value="<%= username %>">
                <input type="hidden" name="fname" value="<%= fullname %>">
                <center><button class="btn btn-primary" type="submit" style="width: 200px;">Share</button></center>
            </form>
        </div>
    </div>
</div>
<%- include("partials/mob-nav") -%>
</body>

<script type="text/javascript">
    var uploadField = document.getElementById("file");

    uploadField.onchange = function() {
        if(this.files[0].size > 2097152){
            alert("Image is too big!");
            this.value = "";
        };
    };
</script>
</html>