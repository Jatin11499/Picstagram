<%- include("partials/header") -%>

<div class="container-fluid main">
    <div class="row">
      <div class="col-sm-5 mx-auto">
        <div class="card reg">
          <div class="card-body">
              <div class="card-title">
                <center>
                    <h1 class="pics" style="font-size: 3rem;">Picstagram</h1>
                    <h2>Register</h2>
                </center>
              </div>
            <form action="/register" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <p>Profile Pic:<input type="file" name="image" required style="padding-left: 5px;" id="file"></p>
              </div>
              <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Email" required>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="fullname" placeholder="Full Name" required>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="username" placeholder="Username" required>
              </div>
              <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password" required>
              </div>
              <center>
                <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
              </center>
            </form>
          </div>
        </div>
        <div class="card">
          <div class="card-body">
              <div class="card-title" style="margin: 0;">
                <center>
                    <p style="margin: 0;">Have an account? <a href="/login">Log in</a></p>
                </center>
              </div>
          </div>
        </div>
      </div>
  </div>
</div>
</body>
<script type="text/javascript">
  var uploadField = document.getElementById("file");

  uploadField.onchange = function() {
      if(this.files[0].size > 1572864){
        alert("Image is too big!");
        this.value = "";
      };
  };
</script>
</html>